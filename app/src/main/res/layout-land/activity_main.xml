    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/redSwitch"
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:background="#FFFFFF"
        android:checked="true"

        android:gravity="center"
        android:padding="20dp"
        android:text="R"
        android:textColor="#D62920"
        android:textOff="Off"
        android:textOn="On"
        android:textSize="12sp"
        android:theme="@style/redSwitch"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.453" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/greenSwitch"
        android:layout_width="109dp"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:theme="@style/greenSwitch"



        android:checked="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="G"
        android:textColor="#08A510"
        android:textOff="Off"
        android:textOn="On"
        android:textSize="12sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/blueSwitch"
        android:layout_width="108dp"
        android:layout_height="59dp"
        android:background="#FFFFFF"
        android:checked="true"


        android:gravity="center"
        android:padding="20dp"
        android:text="B"
        android:textColor="#0126F6"
        android:textOff="Off"
        android:textOn="On"
        android:textSize="12sp"
        android:theme="@style/blueSwitch"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.778" />

    <Button
        android:id="@+id/button"
        android:layout_width="91dp"
        android:layout_height="35dp"
        android:background="#CF688B"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919" />

    <com.google.android.material.slider.Slider
        android:id="@+id/redSlider"
        android:layout_width="202dp"
        android:layout_height="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461"
        app:thumbColor="#D62920"
        app:trackColor="#E3A3A3" />

    <com.google.android.material.slider.Slider
        android:id="@+id/greenSlider"
        android:layout_width="200dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609"
        app:thumbColor="#08A510"
        app:trackColor="#D5F4B2" />

    <com.google.android.material.slider.Slider
        android:id="@+id/blueSlider"
        android:layout_width="204dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763"
        app:thumbColor="#0126F6"
        app:trackColor="#B6BEE8" />

    <EditText
        android:id="@+id/redSliderVal"
        android:layout_width="92dp"
        android:layout_height="41dp"
        android:contentDescription="Enter Red value B/W 0 and 1 "
        android:ems="10"
        android:hint="  0.0 to 1"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457" />

    <EditText
        android:id="@+id/greenSliderVal"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:contentDescription="0"
        android:ems="10"
        android:hint="  0.0 to 1"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <EditText
        android:id="@+id/blueSliderVal"
        android:layout_width="85dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="  0.0 to 1"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.766" />

    <View
        android:id="@+id/colorMaker"
        android:layout_width="502dp"
        android:layout_height="91dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />


</androidx.constraintlayout.widget.ConstraintLayout>